<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/orange"
    android:gravity="bottom">


        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">


            <ImageButton
                android:id="@+id/pokeangle"
                android:layout_width="500dp"
                android:layout_height="400dp"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/orange"
                app:srcCompat="@drawable/pokeangel" />


            <ImageView
                android:id="@+id/counter"
                android:layout_marginTop="170dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/background_image"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

        <TextView
            android:id="@+id/total_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:text="$13.50"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#7FD06E" />
    </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="340dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="420dp"
                        android:layout_marginBottom="10dp"
                        android:text="SLAP HIM" />

                    <TextView
                        android:id="@+id/customerTalking"
                        android:layout_width="400dp"
                        android:layout_height="98dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:text="BATTLE ME!!!!!!!!!"
                        android:textColor="#FDFBFB"
                        android:textSize="30sp"
                        tools:layout_editor_absoluteY="152dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="340dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="420dp"
                        android:text="'Scram!'" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/key"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="420dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/orange"
                        android:clickable="true"
                        android:onClick="clickNew"
                        android:src="@drawable/subject"
                        android:text="hello"
                        app:srcCompat="@drawable/subject" />

                    <ImageButton
                        android:id="@+id/Pokeball"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/orange"
                        android:clickable="true"
                        android:onClick="clickNew"
                        android:src="@drawable/pokeball"
                        android:text="hello"
                        app:srcCompat="@drawable/pokeball" />




                </LinearLayout>

            </LinearLayout>

        </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

