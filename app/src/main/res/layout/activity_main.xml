<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/counter"
    android:gravity="bottom">


    <!--this is the top half -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:orientation="horizontal"> <!--this is the top half of the screen, which
         will hold the register screen, the middle section which is further divied up,
         and the far right :) -->


        <ImageButton
            android:id="@+id/register_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/register_screen_correcta" />


        <TextView
            android:id="@+id/total_monitor"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="-440dp"
            android:layout_marginTop="135dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0"
            android:text="13.50"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#7FD06E"
            android:textSize="130sp" />

        <ImageButton
            android:id="@+id/Pokeangel_customer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="2"
            app:srcCompat="@drawable/pokeangel" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/register_keyboard_correcta" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_gravity="top">

                <Button
                    android:id="@+id/Option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SLAP HIM" />

                <Button
                    android:id="@+id/Option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="'Scram!'" />
            </LinearLayout>

            <TextView
                android:id="@+id/customerTalking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="50dp"
                android:text="BATTLE ME!!!!!!!!!"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_gravity="left">

            <ImageButton
                android:id="@+id/key"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="470dp"
                android:clickable="true"
                android:src="@drawable/subject"
                android:text="key"
                app:srcCompat="@drawable/subject" />

            <ImageButton
                android:id="@+id/Pokeball"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/pokeball"
                android:text="pokeball"
                app:srcCompat="@drawable/pokeball" />

            <ImageButton
                android:id="@+id/emptySlot1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:text="empty" />

            <ImageButton
                android:id="@+id/emptySlot2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:text="empty" />

            <ImageButton
                android:id="@+id/emptySlot3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:text="empty" />

            <ImageButton
                android:id="@+id/emptySlot4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:text="empty" />

            <ImageButton
                android:id="@+id/emptySlot5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:text="empty" />

        </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

